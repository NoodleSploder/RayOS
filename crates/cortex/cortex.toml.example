# Example configuration for RayOS Cortex

[camera]
# Camera device index (usually 0 for built-in webcam)
device_index = 0

[vision]
# Target frames per second for vision processing
target_fps = 60

# Enable debug visualizations (shows bounding boxes, gaze point, etc.)
enable_debug = false

# Gaze smoothing factor (0.0 = no smoothing, 1.0 = maximum smoothing)
gaze_smoothing = 0.3

# Fixation detection threshold
fixation_threshold = 0.01

[object_detection]
# Confidence threshold for object detection (0.0-1.0)
confidence_threshold = 0.6

# Path to object detection model (YOLO, MobileNet, etc.)
# model_path = "models/yolov8n.onnx"

# Use GPU for inference if available
use_gpu = true

[llm]
# Path to LLM model weights
model_path = "models/llama-7b.gguf"

# Device to run inference on: "cpu", "cuda", "metal"
device = "cuda"

# Maximum context length
max_context_length = 2048

# Temperature for generation (0.0 = deterministic, 1.0 = creative)
temperature = 0.7

[audio]
# Enable audio input processing
enabled = false

# Microphone device index
device_index = 0

# Speech-to-text model path
# stt_model = "models/whisper-base.bin"

[fusion]
# Maximum gaze history length (in frames)
max_gaze_history = 60

# Maximum audio buffer length (in transcripts)
max_audio_buffer = 10

# Deictic reference resolution distance threshold
reference_distance_threshold = 0.15

[kernel]
# Enable communication with RayOS kernel
enabled = false

# Kernel connection endpoint
# endpoint = "ipc:///tmp/rayos-kernel.sock"

[logging]
# Log level: "trace", "debug", "info", "warn", "error"
level = "info"

# Log to file
# file = "cortex.log"
