{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "RayOS App Manifest",
  "scopeName": "source.rayapp",
  "patterns": [
    { "include": "#comments" },
    { "include": "#sections" },
    { "include": "#keyvalue" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#booleans" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.rayapp",
          "match": "#.*$"
        }
      ]
    },
    "sections": {
      "patterns": [
        {
          "name": "entity.name.section.rayapp",
          "match": "^\\s*\\[([a-zA-Z_][a-zA-Z0-9_]*)\\]",
          "captures": {
            "1": { "name": "entity.name.tag.rayapp" }
          }
        }
      ]
    },
    "keyvalue": {
      "patterns": [
        {
          "match": "^\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*(=)",
          "captures": {
            "1": { "name": "variable.other.key.rayapp" },
            "2": { "name": "keyword.operator.assignment.rayapp" }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.rayapp",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.rayapp",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.rayapp",
          "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.rayapp",
          "match": "\\b(true|false)\\b"
        }
      ]
    }
  }
}
